extends layout

block body
  body#loginBody: .loginFormBG
    #speechvizHeader: h1#loginHeader Speechviz
    form.loginForm(action="/login/credentials", method="post")
      if retry
        p.loginRetry Invalid user/password combination. Please try again
      else
        p.spaceHolder Invalid user/password combination. Please try again
      table#loginTable
        tr: td.loginText.tableRow User:
        tr.loginTextbox: td.tableRow
          input.loginInput(type="text", name="user")
        tr: td.loginText.tableRow Password:
        tr.loginTextbox: td.tableRow
          input.loginInput(type="password", name="password")
        if referer
          tr: td.tableRow
            input.loginInput(type="hidden", name="referer", value=referer)
        tr: td.tableRow
          input#loginButton(type="submit", name="login", value="    LOGIN    ")
