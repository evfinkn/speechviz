doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title Speechviz
    link(rel="stylesheet", type="text/css", href="css/style.css")
  body
    .navbar
      a(href="/") Back to file selection
      p#file #{ file } - Saved
      a#user(href="/settings") #{ user }
    .row.split
      #column.column
        ul#tree(style="padding-left: 0px")
      #column2.column2
        #waveform-container
          if isVideo
            #visual(style="overflow: auto")
              video#media(controls="controls")
                source(src=`video/${file}`, type=mimetype)
                | Your browser does not support the video element.
            div
              #zoomview-container
              #overview-container
          else
            #zoomview-container
            #overview-container
            audio#media(controls="controls")
              source(src=`audio/${file}`, type=mimetype)
              | Your browser does not support the audio element.
          #media-controls
            .row
              #column3.column3
                #controls
                  .dropdown
                    button#speed-button Speed
                    #speed-dropdown.dropdown-content.speed-content
                      button.spdbtn 0.25x
                      br
                      button.spdbtn 0.5x
                      br
                      button.spdbtn 0.75x
                      br
                      button.spdbtn 1x
                      br
                      button.spdbtn 1.25x
                      br
                      button.spdbtn 1.5x
                      br
                      button.spdbtn 1.75x
                      br
                      button.spdbtn 2x
                      br
                  a#zoomin.icon.button-off(
                    href="javascript:;",
                    title="Zoom in"
                  )
                  a#zoomout.icon.button-on(
                    href="javascript:;",
                    title="Zoom out"
                  )
                  a#undo.icon.button-on(
                    href="javascript:;",
                    title="Undo",
                    style="padding-left: 20px"
                  )
                  a#redo.icon.button-on(href="javascript:;", title="Redo")
                  a#save.icon.button-on(
                    href="javascript:;",
                    title="Save",
                    style="padding-left: 20px"
                  )
                  a#settings.icon.button-on(
                    href="javascript:;",
                    title="Settings",
                    style="padding-left: 20px"
                  )
                  div
                    button#add-segment Add Segment
                  div
                    input#add-label-input(type="text", placeholder="label")
                    button#add-label-button Add Label
              #column4.column4
                textarea#notes(
                  rows="8",
                  cols="60",
                  placeholder="This is for any notes you wish to jot down"
                )

    script(type="application/javascript", src="js/init.js")
